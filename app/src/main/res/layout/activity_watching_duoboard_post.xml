<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#BCE3F4">

        <ImageView
            android:id="@+id/iv_duoBoardWrittenBackspace"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/img_backspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_boardTitle"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_boardTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="솔로랭크 다이아"
            app:layout_constraintLeft_toRightOf="@id/iv_duoBoardWrittenBackspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:fontFamily="@font/nanumroundeb"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btn_postPopUp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/img_popup"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_writtenRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toLeftOf="@+id/btn_postPopUp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/img_writtenrefresh"
            android:layout_marginRight="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/mz"
        app:layout_constraintTop_toBottomOf="@+id/cc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="300">

            <LinearLayout
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_wdSummonerTier"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_wdSummonerName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text="LV 2400 김찬호"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/nanumroundeb"
                            android:textColor="#000000"/>

                        <Button
                            android:id="@+id/btn_writerRecord"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:background="@drawable/user_popup"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_wdWrittenDate"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:text="2020.01.15"
                        android:textColor="#BABABA"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_wdTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:paddingTop="5dp"
                android:layout_marginRight="20dp"
                android:text="다이아 같이 가실분 구합니다."
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/nanumroundeb"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_wdContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingTop="10dp"
                android:text="다이아 같이 가실분 구합니다. 보이스톡 가능하구요 실력 좋으신분만 부탁드립니다."
                android:textSize="15sp"
                android:fontFamily="@font/nanumroundb"
                android:textIsSelectable="true"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/commentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp" />

        </LinearLayout>

</androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        android:background="@drawable/et_userinfo_round">

            <EditText
                android:id="@+id/et_writeComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint=" 댓글을 입력해 주세요."
                android:textSize="17sp"
                android:padding="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/img_writeComment"
                android:fontFamily="@font/nanumroundbr"
                android:background="#FFF"
                android:scrollbars = "vertical"
                android:maxLines="6"/>

            <ImageView
                android:id="@+id/img_writeComment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/comment_write"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_writeComment"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>