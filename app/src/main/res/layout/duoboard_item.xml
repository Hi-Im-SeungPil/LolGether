<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.Activity_duoBoard"
    android:elevation="0dp"
    app:cardElevation="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_duoBoardItemTitle"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:text="다이아 같이 가실분 구합니다."
                android:textSize="15sp"
                android:textColor="#222121"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_duoBoardItemDate"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#C5C5C5"
                android:text="방금 전"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_duoBoardItemContent"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="다이아 같이가실분 구해요 보이스톡 가능하구요 댓글 남겨주세요"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_duoBoardItemTier"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_duoBoardItemSummonerName"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:text="lv 2400 김찬호"
                android:textSize="13sp"
                android:textColor="#222121"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:fontFamily="@font/nanumroundeb"/>

            <ImageView
                android:id="@+id/iv_duoBoardItemMic"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"/>

            <ImageView
                android:id="@+id/iv_duoBoardItemComment"
                android:layout_width="22dp"
                android:layout_height="28dp"
                android:background="@drawable/img_comment"
                android:layout_gravity="center"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tv_duoBoardItemCommentCount"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="3"
                android:textSize="13sp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="#EB46B4"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>