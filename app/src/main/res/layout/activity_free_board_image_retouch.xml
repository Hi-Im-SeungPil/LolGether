<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/abc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#BCE3F4">

        <Button
            android:id="@+id/btn_freeBoardImageRetouchBackspace"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/img_backspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/zb"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/zb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_freeBoardImageRetouchBackspace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:fontFamily="@font/nanumroundeb"
            android:textSize="20sp"
            android:textColor="#FFFFFFFF"
            android:paddingLeft="20dp"
            android:text="이미지 수정"/>

        <Button
            android:id="@+id/btn_imageRetouchAddPhoto"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_imageRetouchWrite"
            android:background="@drawable/img_camera"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btn_imageRetouchWrite"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:fontFamily="@font/nanumroundeb"
            android:textSize="20sp"
            android:textColor="#BCE3F4"
            android:background="#FAFAFA"
            android:text="완료"
            android:clickable="true"
            android:layout_marginRight="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_imageReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업로드 된 이미지 초기화"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abc"
        android:fontFamily="@font/nanumroundeb"
        android:textColor="#FFFFFFFF"
        android:background="#F86161"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageRetouchPhotoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FAFAFA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>